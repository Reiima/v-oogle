{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": [
      "dom",
      "es2015",
      "es5"
    ],
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "alwaysStrict": true,
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "strict": true,
    "pretty": true,
    "diagnostics": true,
    "baseUrl": "./src",
    "paths": {
      "@": ["./"],
      "~": ["./assets"],
      "views": ["./views"],
      "components": ["./views/components"],
      "plugins": ["./plugins"]
    },
    "types": [
      "vue-typescript-import-dts",
      "vue/types"
    ]
  }
}
